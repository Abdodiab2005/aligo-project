<div class="container">
  <h1 class="h3 mb-4">Statistics</h1>

  <div class="row">
    <div class="col-md-3 mb-4">
      <div class="stat-card">
        <div class="stat-card-value">
          <%= typeof totalTweets !== 'undefined' ? totalTweets : 0 %>
        </div>
        <div class="stat-card-label">Total Tweets</div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="stat-card">
        <div class="stat-card-value">
          <%= typeof queuedTweets !== 'undefined' ? queuedTweets : 0 %>
        </div>
        <div class="stat-card-label">Queued</div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="stat-card">
        <div class="stat-card-value">
          <%= typeof postedTweets !== 'undefined' ? postedTweets : 0 %>
        </div>
        <div class="stat-card-label">Posted</div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="stat-card">
        <div class="stat-card-value">
          <%= typeof activeAccounts !== 'undefined' ? activeAccounts : 0 %>
        </div>
        <div class="stat-card-label">Active Accounts</div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Daily Posting Activity</h5>
        </div>
        <div class="card-body">
          <canvas id="dailyChart" width="400" height="200"></canvas>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Account Distribution</h5>
        </div>
        <div class="card-body">
          <% if (typeof accountStats !== 'undefined' && accountStats.length > 0)
          { %> <% accountStats.forEach(function(stat) { %>
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span>@<%= stat.username %></span>
            <span class="badge badge-primary"><%= stat.tweet_count %></span>
          </div>
          <% }); %> <% } else { %>
          <p class="text-muted">No account statistics available</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
